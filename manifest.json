{
  "manifest_version": 3,
  "name": "JiraTime",
  "version": "1.0",
  "description": "",
  "permissions": [
    "storage", 
    "alarms"
  ],
  "host_permissions": [
    "https://novataris.atlassian.net/*",
    "https://time.novataris.com/*" 
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}